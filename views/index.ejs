<body>
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Todo List: </h1>
    <ul class="todoItems">
    <% for(let i=0; i < items.length; i++) {%>
        <li class="item">
            <% if(items[i].completed === true) {%>
                <span class='completed'><%= items[i].thing %></span>
            <% }else{ %>
                <span><%= items[i].thing %></span>
                
            <% } %>    
            <span class='fa fa-trash'></span><span class=""></span>
            
            
            
        </li>
        
    <% } %>
    </ul>

    <h2>Left to do: <%= left %></h2>
    <h2>Completed to do: <%= completed %></h2>
    

    <h2>Add A Todo:</h2>

    <form action="/addTodo" method="POST">
        <input type="text" placeholder="Thing To Do" name="todoItem">
        <input type="submit">
        
    </form>

    <p></p>

    <section class="pomodoro">
        <div class="countdown">
            <div class="countdownTimer">
                <div class="timerContainer">
                    
                <span class="countdownMinutes">00</span>:<span class="countdownSeconds">00</span>
                    
                        
                </div>
            </div>
        </div>
        
    </section>
    <div class="sessionCount">
        <span class="sessionValue"></span>
    </div>
    <button type="submit" id="start">Start/Stop</button> 
    <button type="submit" id="reset">Reset</button> 

    
    
    
    

    
    

    <script src='js/main.js'></script>
</body>
</html>